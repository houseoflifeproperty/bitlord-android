<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/_expansion_header_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/_expansion_header_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/_expansion_header_arrow"
        android:layout_toStartOf="@id/_expansion_header_arrow"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/_expansion_header_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_arrow_down_grey600_24dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>